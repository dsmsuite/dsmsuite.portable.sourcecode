  <Grid ColumnDefinitions="Auto,*,80,Auto" RowDefinitions="Auto" >
    <StackPanel Grid.Column="0" Orientation="Horizontal">
      <Button x:Name="OpenButton" Classes="toolbarImageButton" Content="{StaticResource OpenIcon}"/>
      <Button x:Name="SaveButton" Classes="toolbarImageButton" Command="{Binding SaveFileCommand}" Content="{StaticResource SaveIcon}" />
      <Separator Classes="toolbarSeparator" />
      <Button x:Name="HomeButton" Classes="toolbarImageButton" Command="{Binding HomeCommand}" Content="{StaticResource HomeIcon}"/>
      <Separator Classes="toolbarSeparator"/>
      <Button x:Name="UpButton" Classes="toolbarImageButton" Command="{Binding MoveUpElementCommand}" Content="{StaticResource UpIcon}"/>
      <Button x:Name="DownButton" Classes="toolbarImageButton" Command="{Binding MoveDownElementCommand}" Content="{StaticResource DownIcon}"/>
      <Button x:Name="PartitionButton" Classes="toolbarImageButton" Command="{Binding SortElementCommand}" />
      <ComboBox x:Name="PartitionAlgorithmComboBox" Classes="toolbarComboBox" Width="100" />
      <Button x:Name="LabelButton" Classes="toolbarImageButton"  Command="{Binding MakeSnapshotCommand}" Content="{StaticResource LabelIcon}"/>
      <Separator Classes="toolbarSeparator"/>
      <Button x:Name="UndoButton" Classes="toolbarImageButton" Command="{Binding UndoCommand}" Content="{StaticResource UndoIcon}"/>
      <Button x:Name="RedoButton" Classes="toolbarImageButton" Command="{Binding RedoCommand}" Content="{StaticResource RedoIcon}"/>
      <Button x:Name="HistoryButton" Classes="toolbarImageButton" Command="{Binding ShowHistoryCommand}" Content="{StaticResource HistoryIcon}"/>
      <Separator Classes="toolbarSeparator"/>
      <Button x:Name="ZoomInButon" Classes="toolbarImageButton" Command="{Binding ZoomInCommand}" Content="{StaticResource ZoomInIcon}"/>
      <Button x:Name="ZoomOutButton" Classes="toolbarImageButton" Command="{Binding ZoomOutCommand}" Content="{StaticResource ZoomOutIcon}"/>
      <Button x:Name="SnapshotButton" Classes="toolbarImageButton" Command="{Binding TakeScreenshotCommand}" Content="{StaticResource SnapshotIcon}"/>
      <Separator Classes="toolbarSeparator"/>
      <ComboBox x:Name="IndicatorViewModeComboBox" Classes="toolbarComboBox" Width="100" />
    </StackPanel>
    <uc:ElementSearchBox Grid.Column="1" DataContext="{Binding Path=ElementSearchViewModel}" />
    <Label x:Name="SearchResultLabel" Grid.Column="2"  Classes="toolbarLabel"  DataContext="{Binding Path=ElementSearchViewModel}" Content="{Binding SearchResult}" Width="80"/>
    <Button x:Name="SettingsButton" Grid.Column="3" Classes="toolbarImageButton" Command="{Binding ShowSettingsCommand}" Content="{StaticResource SettingsIcon}"/>
  </Grid>
</UserControl>
